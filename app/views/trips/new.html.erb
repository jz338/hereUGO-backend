</div>

<div id="map"></div>
<script type="text/javascript">

var map;
function initMap() {
  map = new google.maps.Map(document.getElementById('map-canvas'), {
  center: {lat: -34.397, lng: 150.644},
  zoom: 8
});
}

</script>
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD_8J5GF_gB1dLe5kChSn8NWhrMIM4d51I&callback=initMap">
</script>

